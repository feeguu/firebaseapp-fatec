<div class="w-screen h-screen flex items-center justify-center text-white">
    <form class="w-1/3 h-1/3 flex flex-col gap-8" id="loginForm">
        <div class="w-full flex flex-col">
            <label for="email" class="text-lg">e-mail</label>
            <input type="email" id="email"
                class="border-2 rounded-sm border-amber-600 bg-transparent p-2 transition-colors hover:border-amber-700" />
        </div>
        <div class="w-full flex flex-col">
            <label for="password" class="text-lg">senha</label>
            <input type="password" id="password"
                class="border-2 rounded-sm border-amber-600 bg-transparent p-2 transition-colors hover:border-amber-700" />
        </div>
        <div class="w-full flex flex-col gap-2">
            <div class="w-full flex justify-center">
                <a href="/register" class="text-amber-500 hover:text-amber-700 transition-colors">criar conta</a>
            </div>
            <button type="submit"
                class="bg-amber-600 text-white p-2 rounded-sm hover:bg-amber-700 transition-colors">entrar</button>
            <button id="googleLogin" type="button"
                class="border-2 border-amber-600 bg-opacity-10 bg-amber-600 text-white p-2 rounded-sm transition-colors hover:border-amber-700 hover:bg-amber-700 hover:bg-opacity-10">entrar
                com
                google</button>
        </div>
    </form>
</div>
