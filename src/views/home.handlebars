<header class="w-full flex justify-between items-center p-2 text-white">
    <h1 class="text-lg">Tarefas</h1>
    <div class="flex flex-col">
        <p class="text-lg">{{email}}</p>
        <button id="logout-button"
            class="bg-amber-600 text-white p-1 rounded-sm hover:bg-amber-700 transition-colors">sair</button>
    </div>
</header>

<div class="w-full flex flex-col items-center justify-center">
    <main class="text-white w-1/2 flex flex-col gap-1">
        {{#each groups}}
        <section class="w-full flex flex-col gap-2 bg-neutral-800 p-4 rounded-sm shadow-sm" data-id="{{id}}">
            <div class="w-full flex justify-between items-center">
                <div class="flex w-full justify-between">
                    <input id="group-name-{{id}}" disabled
                        class="text-xl bg-transparent border-amber-600 enabled:border-b-2" value="{{name}}" />
                    <div class="flex gap-1">
                        <button class="edit-group-button border border-amber-600 rounded-sm p-1 self-end"
                            data-id="{{id}}">ðŸ–Š</button>
                        <button class="delete-group-button border border-amber-600 rounded-sm p-1 self-end"
                            data-id="{{id}}">ðŸ—‘</button>
                    </div>
                </div>
                <button data-id="{{id}}" class="expand-area-button fill-amber-600">
                    <svg xmlns="http://www.w3.org/2000/svg" height="32px" viewBox="0 -960 960 960" width="32px">
                        <path d="M480-360 280-560h400L480-360Z" />
                    </svg>
                </button>
            </div>
            <ul class="flex flex-col gap-1 transition-[height] overflow-hidden duration-300" data-content="{{id}}">
                {{#each tasks}}
                <li>
                    <div class="flex w-full gap-2 py-2 justify-between items-center">
                        <div>
                            <input class="task-checkbox" {{#if completed}} checked {{/if}} type="checkbox"
                                data-id="{{id}}">
                            <input class="task-name bg-transparent p-1 rounded-sm border-amber-600 enabled:border-b-2"
                                disabled type="text" class="text-lg" value="{{name}}" />
                        </div>
                        <div>
                            <button class=" delete-task-button bg-amber-600 rounded-sm p-1 self-end" data-id="{{id}}">
                                ðŸ—‘
                            </button>

                            <button class="edit-task-button bg-amber-600 rounded-sm p-1 self-end" data-id="{{id}}">
                                ðŸ–Š
                            </button>
                        </div>

                    </div>
                </li>
                {{/each}}
            </ul>
            <button class="add-task-button self-end flex items-center text-amber-600 font-semibold" data-id="{{id}}">
                adicionar tarefa
            </button>
        </section>
        {{/each}}
    </main>
    <div class="w-1/2 flex flex-col py-4">

        <button id="add-group-button" class="text-amber-600 font-semibold self-end">
            adicionar grupo
        </button>
    </div>
</div>

<div id="modal-backdrop"
    class="hidden items-center justify-center absolute left-0 top-0 w-screen h-screen bg-black bg-opacity-60">
    <form id="add-task-form"
        class="w-1/5 h-1/3 flex flex-col justify-around items-center bg-neutral-800 text-white p-8">
        <h1 class="text-lg font-semibold">
            nova tarefa
        </h1>
        <div class="flex flex-col w-full">
            <label class="font-semibold" for="new-task-name">nome</label>
            <input id="new-task-name" name="name" class="bg-transparent border-b-2 border-amber-600 p-1 rounded-sm"
                placeholder="programar as tarefas" />
        </div>
        <button id="save-task-button"
            class="self-end bg-amber-600 text-white p-2 w-1/2 rounded-sm hover:bg-amber-700 transition-colors">
            Salvar
        </button>
    </form>
</div>

<script src="/scripts/home.js" type="module" defer></script>